<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/frame_card_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".activities.SessionActivity"
             android:background="@color/colorPrimaryLight">


<android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:theme="?attr/actionBarTheme"
        android:minHeight="40dp"
        android:id="@+id/toolbar4" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ProgressBar
                android:id="@+id/indeterminate_horizontal_progress"
                android:layout_width="240dp"
                android:layout_height="4dp"
                android:indeterminate="true"
                android:background="@color/colorPrimary"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                app:srcCompat="@mipmap/expand_card"
                android:id="@+id/imageView3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/bottom2_card_margin_bottom"
            android:layout_marginTop="@dimen/cards_margin_top"
            android:layout_marginLeft="@dimen/bottom2_card_margin_left"
            android:layout_marginRight="@dimen/bottom2_card_margin_right"
            android:background="@drawable/card_item_stack_dark_grey_color"
            android:gravity="center_horizontal"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/bottom1_card_margin_bottom"
            android:layout_marginTop="@dimen/cards_margin_top"
            android:layout_marginLeft="@dimen/bottom1_card_margin_left"
            android:layout_marginRight="@dimen/bottom1_card_margin_right"
            android:background="@drawable/card_item_stack_grey_color"
            android:gravity="center_horizontal"
            android:orientation="vertical"/>

    </FrameLayout>

    <g.sw2.swipelib.SwipeFlingAdapterView
        android:layout_marginTop="@dimen/cards_margin_top"
        android:layout_marginLeft="@dimen/top_card_margin_left"
        android:layout_marginRight="@dimen/top_card_margin_right"
        android:layout_marginBottom="@dimen/top_card_margin_bottom"
        android:id="@+id/swipecards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        app:rotation_degrees="30"
        app:max_visible="4"
        app:min_adapter_stack="3">
    </g.sw2.swipelib.SwipeFlingAdapterView>

</FrameLayout>
