<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:id="@+id/frame_card_layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/colorPrimaryDark"
             xmlns:app="http://schemas.android.com/apk/res-auto"
           >


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:theme="?attr/actionBarTheme"
        android:minHeight="40dp"
        android:id="@+id/toolbar4" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <ProgressBar
                android:id="@+id/indeterminate_horizontal_progress"
                android:layout_width="240dp"
                android:layout_height="4dp"
                android:indeterminate="true"
                android:background="@color/colorPrimary"
                style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp" />


            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                app:srcCompat="@mipmap/expand_card"
                android:id="@+id/imageView3"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"/>

            </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <g.sw2.swipelib.SwipeFlingAdapterView
        android:id="@+id/swipecards"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/card_shape"
        android:layout_marginTop="50dp"
        app:rotation_degrees="30"
        app:max_visible="4"
        app:min_adapter_stack="3"
        app:SwipeFlingStyle=""
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp">

    </g.sw2.swipelib.SwipeFlingAdapterView>

</FrameLayout>
